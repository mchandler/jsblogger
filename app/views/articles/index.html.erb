<h1>Articles</h1>

<ul id="articles">
	<% @articles.each do |article| %>
		<li><%= link_to article.title, article_path(article) %></li>
	<% end %>
</ul>

<% if flash[:message] %>
	<p class="flash"><%= flash[:message] %></p>
<% end %>

<%= link_to "New Article", new_article_path, :class => 'new_article'%>